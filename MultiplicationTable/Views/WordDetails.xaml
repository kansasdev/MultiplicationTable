<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiplicationTable.Views.WordDetails"
             xmlns:res="clr-namespace:MultiplicationTable.Resx"
             >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*"/>
                <ColumnDefinition Width="0.33*"/>
                <ColumnDefinition Width="0.33*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="sLayout" />
            
            <Button x:Name="btnSay" Text="{x:Static res:Language.btnSay}" Grid.Row="1" Grid.Column="0" Clicked="Say_Clicked" Padding="5"  Margin="5"/>
            <Button x:Name="btnCancel" Text="{x:Static res:Language.btnCancel}"  Grid.Row="1" Grid.Column="1" Clicked="Cancel_Clicked" Padding="5" Margin="5" />
            <Button x:Name="btnOk" Text="{x:Static res:Language.btnOk}" Grid.Row="1" Grid.Column="2" Clicked="OK_Clicked" Padding="5" Margin="5" />

        </Grid>
    </ContentPage.Content>
</ContentPage>